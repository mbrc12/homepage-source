@page "/"

<PageTitle>Mriganka's homepage</PageTitle>

<div>
    <div class="info-bar">
        <div class="text-4xl text-left m-4 basis-full text-pink-200 md:basis-2/3">
            Mriganka <br><span class="text-3xl">Basu Roy Chowdhury</span>
            @* Visible only on smaller devices *@
            <div class="mr-0 ml-auto pt-8 md:hidden">
                @foreach (var (url, svg) in Sites)
                {
                    <a href="@url">@GetSVG(svg)</a>
                }
            </div>
        </div>
        @* Visible only on larger devices *@
        <div class="basis-1/3 flex flex-row justify-self-end hidden md:inline">
        <div class="w-fit ml-auto mr-0">
                @foreach (var (url, svg) in Sites)
                {
                    <a href="@url">@GetSVG(svg)</a>
                }
        </div>
        </div>
    </div>

    <div class = "main-content">
        <Section Title="About">@About</Section>

        @* <Section Title="Research Topics">
            @foreach(var topic in @GetTopics())
            {
                <Topic item="@topic"/>
            }
        </Section> *@

        <Section Title="Papers">
            <div class = "text-gray italic py-4">
            For each paper below, you will find an associated description. 
            It is intended to be an accessible explanation of the main goal of the work. 
            Detailed abstracts will be found in the link to the paper.
            </div>

            @foreach(var paper in @GetPapers())
            {
                <Paper item="@paper"/>
            }
        </Section>

        <Section Title="Teaching">
            @Teaching
        </Section>

        <Section Title="Extras">@Extra</Section>
    </div>

</div>

